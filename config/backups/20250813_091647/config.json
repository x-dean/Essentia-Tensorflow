{
  "app_settings": {
    "api": {
      "host": "0.0.0.0",
      "port": 8000,
      "workers": 1,
      "reload": true,
      "timeouts": {
        "default": 60,
        "analysis": 300,
        "faiss": 300,
        "discovery": 120
      },
      "cors": {
        "enabled": true,
        "origins": [
          "*"
        ],
        "methods": [
          "GET",
          "POST",
          "PUT",
          "DELETE"
        ],
        "headers": [
          "*"
        ]
      }
    },
    "performance": {
      "max_concurrent_requests": 100,
      "request_timeout": 30,
      "background_tasks": {
        "enabled": true,
        "max_workers": 4
      }
    },
    "discovery": {
      "background_enabled": false,
      "interval": 3600,
      "auto_scan_on_startup": true,
      "supported_extensions": [
        ".mp3",
        ".wav",
        ".flac",
        ".ogg",
        ".m4a",
        ".aac",
        ".wma",
        ".opus"
      ],
      "cache_ttl": 3600,
      "batch_size": 100,
      "hash_algorithm": "md5"
    },
    "paths": {
      "python_path": "/app/src",
      "data_directory": "/app/data",
      "cache_directory": "/app/cache",
      "logs_directory": "/app/logs"
    },
    "faiss": {
      "index_name": "music_library",
      "vector_dimension": 128,
      "similarity_threshold": 0.8
    }
  },
  "analysis_config": {
    "essentia": {
      "audio_processing": {
        "sample_rate": 44100,
        "channels": 1,
        "frame_size": 2048,
        "hop_size": 1024
      },
      "algorithms": {
        "enable_tensorflow": true,
        "enable_complex_rhythm": true,
        "enable_complex_harmonic": true,
        "enable_beat_tracking": true,
        "enable_tempo_tap": true,
        "enable_rhythm_extractor": true,
        "enable_pitch_analysis": true,
        "enable_chord_detection": true
      }
    },
    "performance": {
      "parallel_processing": {
        "max_workers": 4,
        "chunk_size": 25,
        "timeout_per_file": 600,
        "memory_limit_mb": 512
      }
    },
    "analysis_strategies": {
      "short_tracks": {
        "max_duration": 300,
        "strategy": "key_segments",
        "segments": [
          "beginning",
          "middle",
          "end"
        ],
        "segment_duration": 30
      },
      "medium_tracks": {
        "max_duration": 600,
        "strategy": "three_point",
        "segments": [
          "beginning",
          "quarter",
          "middle",
          "three_quarter",
          "end"
        ],
        "segment_duration": 30
      },
      "long_tracks": {
        "max_duration": 3600,
        "strategy": "strategic_points",
        "segments": [
          "beginning",
          "20_percent",
          "40_percent",
          "60_percent",
          "80_percent",
          "end"
        ],
        "segment_duration": 30
      }
    },
    "output": {
      "store_individual_columns": true,
      "store_complete_json": true,
      "compress_json": false,
      "include_segment_details": true,
      "include_processing_metadata": true
    },
    "quality": {
      "min_confidence_threshold": 0.3,
      "fallback_values": {
        "tempo": 120,
        "key": "C",
        "scale": "major"
      }
    },
    "vector_analysis": {
      "feature_vector_size": 128,
      "similarity_metrics": [
        "cosine",
        "euclidean"
      ],
      "index_type": "IndexIVFFlat",
      "nlist": 100,
      "hash_algorithm": "md5",
      "normalization": {
        "enabled": true,
        "method": "l2"
      }
    }
  },
  "database": {
    "pool_size": 25,
    "max_overflow": 35,
    "pool_timeout": 45,
    "pool_recycle": 7200,
    "retry_settings": {
      "max_retries": 3,
      "initial_delay": 1,
      "backoff_multiplier": 2,
      "max_delay": 30
    },
    "connection_timeout": 30
  },
  "logging": {
    "log_level": "DEBUG",
    "max_file_size": 20480,
    "max_backups": 10,
    "compress": true,
    "suppression": {
      "tensorflow": true,
      "essentia": true,
      "librosa": true,
      "matplotlib": true,
      "pil": true
    }
  },
  "discovery": {
    "supported_extensions": [
      ".mp3",
      ".wav",
      ".flac"
    ],
    "batch_size": 990
  },
  "_metadata": {
    "version": "2.0",
    "last_updated": "2025-08-13T09:15:44.312407",
    "description": "Consolidated configuration file for Essentia-Tensorflow Playlist App"
  }
}