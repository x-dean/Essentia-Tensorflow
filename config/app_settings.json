{
  "api": {
    "host": "0.0.0.0",
    "port": 8000,
    "workers": 1,
    "reload": false,
    "cors": {
      "enabled": true,
      "origins": ["*"],
      "methods": ["GET", "POST", "PUT", "DELETE"],
      "headers": ["*"]
    }
  },
  "performance": {
    "max_concurrent_requests": 100,
    "request_timeout": 30,
    "background_tasks": {
      "enabled": true,
      "max_workers": 4
    }
  },
  "discovery": {
    "background_enabled": false,
    "interval": 3600,
    "auto_scan_on_startup": true
  },
  "paths": {
    "python_path": "/app/src",
    "data_directory": "/app/data",
    "cache_directory": "/app/cache",
    "logs_directory": "/app/logs"
  }
}
