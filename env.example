# Music Directory Configuration
# Set these to point to your music directories
MUSIC_DIRECTORY=/path/to/your/music
AUDIO_DIRECTORY=/path/to/your/audio

# Optional: Additional music directories (comma-separated)
# EXTRA_MUSIC_DIRS=/path/to/extra/music1,/path/to/extra/music2

# Database Configuration (PostgreSQL from base image)
DATABASE_URL=postgresql://playlist_user:playlist_password@localhost:5432/playlist_db

# Redis Configuration (for production)
REDIS_URL=redis://redis:6379/0

# Discovery Settings
SEARCH_DIRECTORIES=/music,/audio
DISCOVERY_CACHE_TTL=3600
DISCOVERY_BATCH_SIZE=100

# Background Discovery Settings
ENABLE_BACKGROUND_DISCOVERY=false
DISCOVERY_INTERVAL=3600

# Logging Configuration
LOG_LEVEL=INFO
# For development: LOG_LEVEL=DEBUG

# Log File Configuration
LOG_FILE=logs/playlist_app.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5
LOG_STRUCTURED_CONSOLE=false  # Set to true for JSON console output

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# Python Path (for imports)
PYTHONPATH=/app/src

# PostgreSQL Settings (for production)
POSTGRES_DB=playlist_db
POSTGRES_USER=playlist_user
POSTGRES_PASSWORD=playlist_password

# Security (for production)
# SECRET_KEY=your-secret-key-here
# ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
